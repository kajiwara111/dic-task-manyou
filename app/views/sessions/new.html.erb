
<h1>Log in</h1>
<div class="form-group">
  <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
    <%= f.submit "Log in", class: "btn btn-default" %>
  <% end %>
</div>