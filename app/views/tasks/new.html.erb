<h1><%= t('view.new_task_register') %></h1>
<%= form_with(model: @task, local: true) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="field">
    <%= f.label :task_name %><br>
    <%= f.text_field :task_name %><br>
    <%= f.label :task_content %><br>
    <%= f.text_area :task_content %><br>
    <%= f.label :deadline %><br>
    <div class='input-group date datetimepicker'>
      <%= f.text_field :deadline, class: 'form-control', placeholder: 'YYYY/MM/DD hh:mm' %><br>
      <span class="input-group-addon">
        <span class="fa fa-calendar"></span>
      </span>
    </div>
  </div>
  <div>
    <%= f.submit t('view.register') %>
  </div>
<% end %>
