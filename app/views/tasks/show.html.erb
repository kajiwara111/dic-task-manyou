<div class="container">
  <h3><%= t('view.task_detail') %></h1>
  <table class="table table-bordered col-md-8">
    <tr>
      <th class="col-md-2"><%= t('view.task_name') %></th>
      <td class="col-md-6"><%= @task.task_name %></td>
    </tr>
    <tr>
      <th class="col-md-2"><%= t('view.task_detail') %></th>
      <td class="col-md-6"><%= @task.task_content %></td>
    </tr>
    <tr>
      <th class="col-md-2"><%= t('view.registerd_datetime') %></th>
      <td class="col-md-6"><%= @task.created_at.strftime('%Y/%m/%d %H:%M') %></td>
    </tr>
    <tr>
      <th class="col-md-2"><%= t('view.deadline') %></th>
      <td class="col-md-6"><%= @task.deadline %></td>
    </tr>
    <tr>
      <th class="col-md-2"><%= t('view.state') %></th>
      <td class="col-md-6"><%= @task.state_i18n %></td>
    </tr>
    <tr>
      <th class="col-md-2"><%= t('view.priority') %></th>
      <td class="col-md-6"><%= @task.priority_i18n %></td>
    </tr>
    <tr>
      <th class="col-md-2"><%= t('view.label') %></th>
      <td class="col-md-6"><%= @task.labels.map{|label| label.name}.join(' ') %></td>
    </tr>
  </table>
  <%= link_to t('view.edit'), edit_task_path(@task.id), class: 'btn btn-default' %> 
  <%= link_to t('view.delete'), task_path(@task.id), method: :delete, data: { confirm: t('view.delete_confirm')}, class: 'btn btn-default' %>
</div>
